<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appcolor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Shipping"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/email_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:fontFamily="@font/lucidasansdemibold"
                            android:hint="Email"
                            android:singleLine="true"
                            android:textSize="12sp" />

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/lucidasansdemiboldroman"
                        android:text="Shipping Address"
                        android:textColor="@color/textcolor"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/first_name_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edt_bg_selector"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz. "
                                android:fontFamily="@font/lucidasansdemibold"
                                android:hint="First Name"
                                android:singleLine="true"
                                android:textSize="12sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/last_name_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edt_bg_selector"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz. "
                                android:fontFamily="@font/lucidasansdemibold"
                                android:hint="Last Name"
                                android:singleLine="true"
                                android:textSize="12sp" />

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/shipping_door_street_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/shipping_door_street_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edt_bg_selector"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 #`~!@#$%^*()-_=+{}[]\|;':,./?&amp;"
                            android:fontFamily="@font/lucidasansdemibold"
                            android:hint="Enter Address"
                            android:maxLength="100"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="12sp" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/shipping_city_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="10dp">

                                        <EditText
                                            android:id="@+id/shipping_city_input"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edt_bg_selector"
                                            android:focusable="false"
                                            android:fontFamily="@font/lucidasansdemibold"
                                            android:hint="City"
                                            android:singleLine="true"
                                            android:textSize="12sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <ProgressBar
                                        android:id="@+id/shipping_city_progressbar"
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="12dp"
                                        android:background="#fafafa"
                                        android:indeterminate="true"
                                        android:indeterminateTint="#d9d5d5"
                                        android:indeterminateTintMode="src_atop"
                                        android:visibility="gone" />
                                </RelativeLayout>


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/shipping_state_input_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="10dp"
                                    android:paddingTop="10dp">

                                    <EditText
                                        android:id="@+id/shipping_state_input"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edt_bg_selector"
                                        android:focusable="false"
                                        android:fontFamily="@font/lucidasansdemibold"
                                        android:hint="State"
                                        android:singleLine="true"
                                        android:textSize="12sp" />
                                </android.support.design.widget.TextInputLayout>

                                <ProgressBar
                                    android:id="@+id/shipping_state_progressbar"
                                    style="?android:attr/progressBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="13dp"
                                    android:layout_marginTop="12dp"
                                    android:background="#fafafa"
                                    android:indeterminate="true"
                                    android:indeterminateTint="#d9d5d5"
                                    android:indeterminateTintMode="src_atop"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/shipping_country_input_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="10dp">

                                <EditText
                                    android:id="@+id/shipping_country_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edt_bg_selector"
                                    android:focusable="false"
                                    android:fontFamily="@font/lucidasansdemibold"
                                    android:hint="Country"
                                    android:singleLine="true"
                                    android:textSize="12sp" />
                            </android.support.design.widget.TextInputLayout>

                            <ProgressBar
                                android:id="@+id/shipping_country_progressbar"
                                style="?android:attr/progressBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="13dp"
                                android:layout_marginTop="12dp"
                                android:background="#fafafa"
                                android:indeterminate="true"
                                android:indeterminateTint="#d9d5d5"
                                android:indeterminateTintMode="src_atop"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/shipping_pin_input_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp">

                                    <EditText
                                        android:id="@+id/shipping_pin_input"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/edt_bg_selector"
                                        android:digits="0123456789"
                                        android:fontFamily="@font/lucidasansdemibold"
                                        android:hint="Pin"
                                        android:inputType="number"
                                        android:maxLength="6"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:textSize="12sp" />
                                </android.support.design.widget.TextInputLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <CheckBox
                            android:id="@+id/same_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:fontFamily="@font/lucidasansdemibold"
                            android:text="Billing address is same as Shipping address"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_same"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lucidasansdemiboldroman"
                            android:text="Billing Address"
                            android:textColor="@color/textcolor"
                            android:textSize="16dp" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/billing_door_street_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <EditText
                                android:id="@+id/billing_door_street_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edt_bg_selector"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 #`~!@#$%^*()-_=+{}[]\|;':,./?&amp;"
                                android:fontFamily="@font/lucidasansdemibold"
                                android:hint="Enter Address"
                                android:maxLength="100"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textSize="12sp" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/billing_city_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="10dp">

                                        <EditText
                                            android:id="@+id/billing_city"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edt_bg_selector"
                                            android:focusable="false"
                                            android:fontFamily="@font/lucidasansdemibold"
                                            android:hint="City"
                                            android:singleLine="true"
                                            android:textSize="12sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <ProgressBar
                                        android:id="@+id/billing_city_progressbar"
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="12dp"
                                        android:background="#fafafa"
                                        android:indeterminate="true"
                                        android:indeterminateTint="#d9d5d5"
                                        android:indeterminateTintMode="src_atop"
                                        android:visibility="gone" />
                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/billing_state_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:paddingLeft="10dp"
                                        android:paddingTop="10dp">

                                        <EditText
                                            android:id="@+id/billing_state"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edt_bg_selector"
                                            android:focusable="false"
                                            android:fontFamily="@font/lucidasansdemibold"
                                            android:hint="State"
                                            android:singleLine="true"
                                            android:textSize="12sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <ProgressBar
                                        android:id="@+id/billing_state_progressbar"
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="12dp"
                                        android:background="#fafafa"
                                        android:indeterminate="true"
                                        android:indeterminateTint="#d9d5d5"
                                        android:indeterminateTintMode="src_atop"
                                        android:visibility="gone" />
                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/billing_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:paddingRight="10dp"
                                        android:paddingTop="10dp">

                                        <EditText
                                            android:id="@+id/billing_country"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edt_bg_selector"
                                            android:focusable="false"
                                            android:fontFamily="@font/lucidasansdemibold"
                                            android:hint="Country"
                                            android:singleLine="true"
                                            android:textSize="12sp" />
                                    </android.support.design.widget.TextInputLayout>

                                    <ProgressBar
                                        android:id="@+id/billing_progressbar"
                                        style="?android:attr/progressBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="12dp"
                                        android:background="#fafafa"
                                        android:indeterminate="true"
                                        android:indeterminateTint="#d9d5d5"
                                        android:indeterminateTintMode="src_atop"
                                        android:visibility="gone" />
                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/billing_pin_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:paddingTop="10dp">

                                        <EditText
                                            android:id="@+id/billing_pin"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/edt_bg_selector"
                                            android:digits="0123456789"
                                            android:fontFamily="@font/lucidasansdemibold"
                                            android:hint="Pin"
                                            android:inputType="number"
                                            android:maxLength="6"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textSize="12sp" />
                                    </android.support.design.widget.TextInputLayout>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="40dp"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5">

                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:id="@+id/payment_section"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/lucidasansdemiboldroman"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Continue to shipping method"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_placing"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/placing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:fontFamily="@font/lucidasansdemibold"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Few of the products in your cart cannot be shipped to your given"
                            android:textColor="@color/textcolor"
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/placing1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/grey"
                            android:fontFamily="@font/lucidasansdemibold"
                            android:gravity="center"
                           android:paddingBottom="5dp"
                            android:text="Few of the products in your cart cannot be shipped to your given"
                            android:textColor="@color/colorAccent"
                            android:textSize="11dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
